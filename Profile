import React from 'react';
import { motion } from 'framer-motion';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { 
  ArrowLeft, LogOut, Settings, Bell, Moon, 
  Shield, HelpCircle, ChevronRight, Music2, 
  User, Zap, RefreshCw
} from 'lucide-react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { toast } from 'sonner';
import { Button } from '@/components/ui/button';
import { Switch } from '@/components/ui/switch';

export default function Profile() {
  const queryClient = useQueryClient();

  // Fetch user
  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me()
  });

  // Fetch preferences
  const { data: preferences } = useQuery({
    queryKey: ['preferences'],
    queryFn: async () => {
      const prefs = await base44.entities.UserPreferences.list();
      return prefs[0] || null;
    }
  });

  // Fetch stats
  const { data: swipedTracks = [] } = useQuery({
    queryKey: ['allSwipes'],
    queryFn: () => base44.entities.SwipedTrack.list()
  });

  const likedCount = swipedTracks.filter(t => t.action === 'liked').length;
  const skippedCount = swipedTracks.filter(t => t.action === 'skipped').length;

  const handleDisconnect = async () => {
    if (preferences) {
      await base44.entities.UserPreferences.update(preferences.id, {
        spotify_connected: false
      });
      queryClient.invalidateQueries({ queryKey: ['preferences'] });
      toast.success("Disconnected from Spotify");
    }
  };

  const handleLogout = () => {
    base44.auth.logout();
  };

  const handleClearHistory = async () => {
    for (const track of swipedTracks) {
      await base44.entities.SwipedTrack.delete(track.id);
    }
    queryClient.invalidateQueries({ queryKey: ['swipedTracks'] });
    queryClient.invalidateQueries({ queryKey: ['allSwipes'] });
    queryClient.invalidateQueries({ queryKey: ['favorites'] });
    queryClient.invalidateQueries({ queryKey: ['likedTracks'] });
    toast.success("Swipe history cleared!");
  };

  const menuItems = [
    {
      icon: Bell,
      label: "Notifications",
      description: "Manage push notifications",
      action: () => toast.info("Coming soon!")
    },
    {
      icon: Moon,
      label: "Appearance",
      description: "Dark mode is always on",
      toggle: true,
      checked: true
    },
    {
      icon: RefreshCw,
      label: "Clear History",
      description: "Reset all swipe data",
      action: handleClearHistory,
      danger: true
    },
    {
      icon: Shield,
      label: "Privacy",
      description: "Manage your data",
      action: () => toast.info("Coming soon!")
    },
    {
      icon: HelpCircle,
      label: "Help & Support",
      description: "Get help with the app",
      action: () => toast.info("Coming soon!")
    }
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-[#0a0a0a] via-[#121212] to-[#1a1a2e]">
      {/* Header */}
      <div className="sticky top-0 z-50 bg-black/50 backdrop-blur-xl border-b border-white/5">
        <div className="max-w-lg mx-auto px-4 py-4">
          <div className="flex items-center gap-4">
            <Link 
              to={createPageUrl("Home")}
              className="p-2 rounded-xl bg-white/5 hover:bg-white/10 transition-colors"
            >
              <ArrowLeft className="w-5 h-5 text-white" />
            </Link>
            <div className="flex-1">
              <h1 className="text-xl font-bold text-white">Profile</h1>
              <p className="text-white/40 text-sm">Manage your account</p>
            </div>
          </div>
        </div>
      </div>

      <div className="max-w-lg mx-auto px-4 py-6 space-y-6">
        {/* Profile Card */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="bg-white/5 backdrop-blur-lg rounded-3xl p-6 border border-white/10"
        >
          <div className="flex items-center gap-4 mb-6">
            <div className="w-20 h-20 rounded-2xl bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center">
              <User className="w-10 h-10 text-white" />
            </div>
            <div>
              <h2 className="text-xl font-bold text-white">
                {user?.full_name || preferences?.spotify_display_name || "Music Lover"}
              </h2>
              <p className="text-white/50 text-sm">{user?.email}</p>
              {preferences?.spotify_connected && (
                <span className="inline-flex items-center gap-1 mt-2 px-3 py-1 rounded-full bg-green-500/20 text-green-400 text-xs">
                  <Zap className="w-3 h-3" />
                  Spotify Connected
                </span>
              )}
            </div>
          </div>

          {/* Stats Grid */}
          <div className="grid grid-cols-3 gap-4">
            <div className="text-center">
              <p className="text-2xl font-bold text-white">{swipedTracks.length}</p>
              <p className="text-white/40 text-xs">Total Swipes</p>
            </div>
            <div className="text-center">
              <p className="text-2xl font-bold text-green-400">{likedCount}</p>
              <p className="text-white/40 text-xs">Liked</p>
            </div>
            <div className="text-center">
              <p className="text-2xl font-bold text-red-400">{skippedCount}</p>
              <p className="text-white/40 text-xs">Skipped</p>
            </div>
          </div>
        </motion.div>

        {/* Spotify Connection */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
          className="bg-white/5 backdrop-blur-lg rounded-2xl p-4 border border-white/10"
        >
          <div className="flex items-center gap-4">
            <div className="w-12 h-12 rounded-xl bg-[#1DB954]/20 flex items-center justify-center">
              <svg className="w-6 h-6 text-[#1DB954]" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
            </div>
            <div className="flex-1">
              <h3 className="text-white font-medium">Spotify Account</h3>
              <p className="text-white/50 text-sm">
                {preferences?.spotify_connected ? "Connected" : "Not connected"}
              </p>
            </div>
            {preferences?.spotify_connected ? (
              <Button
                variant="outline"
                size="sm"
                onClick={handleDisconnect}
                className="border-white/10 text-white/70 hover:bg-white/5"
              >
                Disconnect
              </Button>
            ) : (
              <Button
                size="sm"
                className="bg-[#1DB954] hover:bg-[#1ed760]"
              >
                Connect
              </Button>
            )}
          </div>
        </motion.div>

        {/* Menu Items */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
          className="bg-white/5 backdrop-blur-lg rounded-2xl border border-white/10 divide-y divide-white/5"
        >
          {menuItems.map((item, index) => (
            <div
              key={item.label}
              onClick={item.action}
              className={`flex items-center gap-4 p-4 ${item.action ? 'cursor-pointer hover:bg-white/5' : ''} transition-colors`}
            >
              <div className={`w-10 h-10 rounded-xl ${item.danger ? 'bg-red-500/20' : 'bg-white/5'} flex items-center justify-center`}>
                <item.icon className={`w-5 h-5 ${item.danger ? 'text-red-400' : 'text-white/70'}`} />
              </div>
              <div className="flex-1">
                <h3 className={`font-medium ${item.danger ? 'text-red-400' : 'text-white'}`}>{item.label}</h3>
                <p className="text-white/40 text-sm">{item.description}</p>
              </div>
              {item.toggle ? (
                <Switch checked={item.checked} disabled />
              ) : (
                <ChevronRight className="w-5 h-5 text-white/30" />
              )}
            </div>
          ))}
        </motion.div>

        {/* Logout Button */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
        >
          <Button
            variant="outline"
            onClick={handleLogout}
            className="w-full py-6 rounded-2xl border-red-500/30 text-red-400 hover:bg-red-500/10 hover:border-red-500/50"
          >
            <LogOut className="w-5 h-5 mr-2" />
            Log Out
          </Button>
        </motion.div>

        {/* Version */}
        <p className="text-center text-white/20 text-xs pt-4">
          SwipeSound v1.0.0 â€¢ Made with ðŸ’š
        </p>
      </div>
    </div>
  );
}
